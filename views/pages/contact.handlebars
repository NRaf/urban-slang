<script src='https://www.google.com/recaptcha/api.js'></script>


<div class="col-md-12">
    <h1>Contact Us</h1>
    <hr>
</div>
<div class="col-md-12">
    <form role="form" method="POST">
    <div class="form-group">
        <label for="name">Your name:</label>
        <input name="name" class="form-control" id="name">
    </div>
    <div class="form-group">
        <label for="email">Your email:</label>
        <input name="email" type="email" class="form-control" id="email" placeholder="example@address.com">
    </div>
    <div class="form-group">
        <label for="subject">Subject:</label>
        <input name="subject" class="form-control" id="subject">
    </div>
    <div class="form-group">
        <label for="message">Your Message:</label>
        <textarea name="message" class="form-control" id="message" rows="8"></textarea>
    </div>

    <div class="g-recaptcha" data-sitekey="6LfcPScTAAAAAHU-ibZt5QfcmnGbEuDoyqU1dTcL"></div>

    <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>